<h2>Users Index</h2>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>About</th>
      <th>---</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td> <%= link_to user.username, user_path(user) %></td>
      <td> <%= user.about %></td>
      <% if current_user %>
      <td> <%= link_to "Edit", edit_user_path(user) %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
<h2> <%= link_to "Courses Index", courses_path %></h2>
<% end %>
