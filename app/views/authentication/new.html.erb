<%= form_tag signin_path %>

<% if @sign_in_error %>
  <p>
    <%= @sign_in_error %>
  </p>

  <div>
    <%= label_tag :username %>
  </div>
  <div>
    <%= text_field_tag :username %>
  </div>
  <div>
    <%= label_tag :password %>
  </div>
  <div>
    <%= password_field_tag :password %>
  </div>
  <br>
  <div>
    <%= submit_tag "Sign In" %>
  </div>


<% end %>
