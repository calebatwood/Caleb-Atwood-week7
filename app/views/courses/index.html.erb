<h2>Courses Index</h2>
<p> <%= link_to "Add new course", new_course_path %></p>
<br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Day or night?</th>
      <th>---</th>
      <th>---</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
    <tr>
      <td> <%= link_to course.title, course_path(course) %></td>
      <td> <%= course.day_class %></td>
      <td> <%= link_to "Edit Course", edit_course_path(course) %></td>
      <td> <%= link_to "Delete Course", course, method: :delete %>
    </tr>
    <% end %>
  </tbody>
</table>

